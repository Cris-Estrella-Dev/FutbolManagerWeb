@model IEnumerable<FutbolManagerWeb.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Apellidos)</th>
            <th>@Html.DisplayNameFor(model => model.First().Dorsal)</th>
            <th>@Html.DisplayNameFor(model => model.First().Edad)</th>
            <th>@Html.DisplayNameFor(model => model.First().Equipo.Nombre)</th>

            <th>Acciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellidos</td>
                <td>@item.Dorsal</td>
                <td>@item.Edad</td>
                <td>@item.Equipo.Nombre</td>
          
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JugadorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JugadorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JugadorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


