<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FutbolManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

</head>
<body class="d-flex vh-100">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-light border-end">
        <div class="p-3">
            <h4 class="text-primary">Futbol<span class="text-dark">Manager</span></h4>
        </div>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item mb-1">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="bi bi-grid-1x2-fill me-2"></i>Panel
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Temporadas" asp-action="Index" class="nav-link">
                    <i class="bi bi-calendar3 me-2"></i>Temporadas
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Jugadors" asp-action="Index" class="nav-link">
                    <i class="bi bi-people me-2"></i>Jugadores
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Contratos" asp-action="Index" class="nav-link">
                    <i class="bi bi-file-earmark-text me-2"></i>Contratos
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Partidos" asp-action="Index" class="nav-link">
                    <i class="bi bi-trophy me-2"></i>Partidos
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Equipos" asp-action="Index" class="nav-link">
                    <i class="bi bi-diagram-3 me-2"></i>Equipos
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="Asistente IA" asp-action="Index" class="nav-link">
                    <i class="bi bi-stars me-2"></i>Asistente IA
                </a>
            </li>
        </ul>
    </nav>


    <!-- Main content -->
    <div class="flex-grow-1 overflow-auto">
        <!-- Topbar (puedes incluir aquí perfil o logo pequeño) 
        <header class="bg-white border-bottom py-2 px-3 d-flex justify-content-end">
            <img src="~/images/avatar-placeholder.png" alt="Avatar" class="rounded-circle" width="40" height="40">
        </header>
        
        <!--Cuerpo principal -->
        <main class="p-4">
            @RenderBody()
        </main>

        <footer class="text-center py-3 border-top">
            © @DateTime.Now.Year - FutbolManager
        </footer>
    </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-..." crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
